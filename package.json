{
  "name": "inordnung",
  "version": "1.0.0-beta.0",
  "description": "",
  "main": "./public/electron.js",
  "scripts": {
    "build:react": "react-scripts build",
    "build:electron": "tsc --project tsconfig.electron.json",
    "prebuild": "npm run copyassets",
    "build": "npm run build:react && npm run build:electron",
    "copyassets": "node ./build-scripts/copyassets.js",
    "prestart": "npm run copyassets && npm run build:electron",
    "start": "concurrently \"cross-env BROWSER=none npm run start:react\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "start:react": "react-scripts start",
    "test": "npm run lint",
    "lint": "eslint './**/*.{tsx,ts,js}'",
    "postinstall": "electron-builder install-app-deps",
    "prepack": "npm run build",
    "pack": "electron-builder --dir",
    "pack:skipsigning": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run pack",
    "predist": "npm run build",
    "dist": "electron-builder",
    "dist:skipsigning": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run dist",
    "eject": "react-scripts eject"
  },
  "build": {
    "productName": "InOrdnung",
    "copyright": "Copyright Â© 2021 Alex Seifert",
    "appId": "com.alexseifert.inordnung",
    "buildDependenciesFromSource": true,
    "files": [
      "build"
    ],
    "directories": {
      "buildResources": "build-resources"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "entitlements": "build-resources/entitlements.mac.plist",
      "type": "development",
      "darkModeSupport": true,
      "icon": "build-resources/icon.icns",
      "fileAssociations": [
        {
          "ext": [
            "inord"
          ],
          "name": "InOrdnung Project File",
          "role": "Editor",
          "icon": "build-resources/icon-doc.icns"
        }
      ]
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz"
      ],
      "category": "Office",
      "fileAssociations": [
        {
          "ext": [
            "inord"
          ],
          "name": "InOrdnung Project File"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build-resources/icon.ico",
      "fileAssociations": [
        {
          "ext": [
            "inord"
          ],
          "name": "InOrdnung Project File",
          "icon": "build-resources/icon-doc.ico"
        }
      ]
    }
  },
  "repository": "https://github.com/eiskalteschatten/electron-react-typescript.git",
  "keywords": [],
  "author": {
    "name": "Alex Seifert",
    "email": "alex@alexseifert.com"
  },
  "homepage": ".",
  "license": "",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "dependencies": {
    "@date-io/moment": "^1.3.13",
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/pickers": "^3.2.10",
    "clsx": "^1.1.1",
    "electron-log": "^4.3.2",
    "file-type": "^16.2.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-intl": "^5.13.2",
    "react-markdown": "^5.0.3",
    "react-quill": "^1.3.5",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "sharp": "^0.27.2",
    "update-electron-app": "^2.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^10.4.1",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/file-type": "^10.9.1",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.31",
    "@types/react-dom": "^17.0.1",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/sharp": "^0.27.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "electron-devtools-installer": "^3.1.1",
    "eslint": "^7.21.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.8",
    "node-sass": "^4.14.1",
    "typescript": "^4.2.2",
    "wait-on": "^5.2.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  }
}
